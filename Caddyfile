# Global settings
{
	auto_https off
}

# Development configuration
http://localhost:80 {
	# API routes - handle all /api/* requests
	handle /api/* {
		reverse_proxy api:3000
	}

	# UI routes - handle everything else
	handle /* {
		reverse_proxy ui:3000
	}
}

# Production configuration
web.snehaa.store {
	# API routes - handle all /api/* requests
	handle /api/* {
		reverse_proxy api:3000
	}

	# UI routes - handle everything else
	handle /* {
		reverse_proxy ui:3000
	}
}

